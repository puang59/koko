{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "koko",
  "version": "0.1.0",
  "identifier": "com.koko.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "koko",
        "width": 300,
        "height": 200,
        "x": 1200,
        "y": 800,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "fullscreen": false,
        "resizable": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
